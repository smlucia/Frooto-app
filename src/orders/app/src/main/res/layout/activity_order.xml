<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderActivity"
    android:padding="10dp"
    android:id="@+id/orderLayout">

    <ImageView
        android:id="@+id/product_image"
        android:layout_width="394dp"
        android:layout_height="286dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/juiceName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_image"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/juicePrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/juiceName"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/juiceDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/juicePrice"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="20sp" />


    <Button
        android:id="@+id/btnAmountNeg"
        android:layout_width="55dp"
        android:layout_height="38dp"
        android:layout_below="@+id/juiceDescription"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="326dp"
        android:background="#F06C93"
        android:text="-"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="28sp" />

    <Button
        android:id="@+id/btnAmountAdd"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_below="@+id/juiceDescription"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="315dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="41dp"
        android:background="#F06C93"
        android:text="+"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="28sp" />


    <TextView
        android:id="@+id/juiceAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btnAmountNeg"
        android:layout_alignBottom="@+id/btnAmountNeg"
        android:layout_marginStart="175dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="3dp"
        android:layout_toEndOf="@+id/btnAmountNeg"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnOrder"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnAmountNeg"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="106dp"
        android:layout_marginTop="67dp"
        android:layout_marginEnd="115dp"
        android:background="#F06C93"
        android:fontFamily="@font/bubblegum_sans"
        android:text="ORDER"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/juiceTotAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btnAmountNeg"
        android:layout_alignBottom="@+id/btnAmountNeg"
        android:layout_marginStart="111dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="-46dp"
        android:layout_toEndOf="@+id/btnAmountNeg"
        android:textSize="20sp" />

</RelativeLayout>
