<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderActivity"
    android:padding="10dp"
    android:id="@+id/orderLayout">

    <ImageView
        android:id="@+id/product_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        />

    <TextView
        android:id="@+id/juiceName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_image"
        android:layout_margin="10dp"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/juicePrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/juiceName"
        android:layout_margin="10dp"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/juiceDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/juicePrice"
        android:layout_margin="10dp"
        android:layout_marginTop="51dp"
        android:layout_marginBottom="10dp"
        android:textSize="16dp" />


    <Button
        android:id="@+id/btnAmountNeg"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/juiceDescription"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="309dp"
        android:background="#F06C93"
        android:text="-"
        android:textAllCaps="false"
        android:textColor="#FFF" />

    <Button
        android:id="@+id/btnAmountAdd"
        android:layout_width="64dp"
        android:layout_height="28dp"
        android:layout_below="@+id/juiceDescription"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="315dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="22dp"
        android:background="#F06C93"
        android:text="+"
        android:textAllCaps="false"
        android:textColor="#FFF"
        android:textSize="16dp" />


    <TextView
        android:id="@+id/juiceAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btnAmountNeg"
        android:layout_alignBottom="@+id/btnAmountNeg"
        android:layout_marginStart="175dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="3dp"
        android:layout_toEndOf="@+id/btnAmountNeg"
        android:textSize="16dp" />

    <Button
        android:id="@+id/btnOrder"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnAmountNeg"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="106dp"
        android:layout_marginTop="67dp"
        android:layout_marginEnd="115dp"
        android:background="#F06C93"
        android:text="@string/order"
        android:textAllCaps="false"
        android:textColor="#FFF" />

    <TextView
        android:id="@+id/juiceTotAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btnAmountNeg"
        android:layout_alignBottom="@+id/btnAmountNeg"
        android:layout_marginStart="92dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="-47dp"
        android:layout_toEndOf="@+id/btnAmountNeg"
        android:textSize="16dp" />

</RelativeLayout>